<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/real_newkiss_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/realtimethird_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:contentDescription="@string/empty_string"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/newKiss_txtthird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/new_kisses"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/real_newkiss_header1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/real_newkiss_header"
        android:background="@color/button_bg"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/realtime_icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/empty_string" />

        <TextView
            android:id="@+id/realnewKiss_txtthird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/fifteen"
            android:text="@string/realtimenew_kisses"
            android:textColor="@color/white"
            android:textSize="@dimen/eighteen_sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/real_newkiss_header2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/real_newkiss_header1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/realnewKiss_txt_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/ten_sp"
            android:text="@string/upload_attachment"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteen_sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_realtime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/real_newkiss_header4"
        android:layout_below="@+id/real_newkiss_header2"
        android:background="@color/white"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/real_newkiss_header3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:id="@+id/ll_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/voice_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contentDescription="@string/empty_string"
                    android:padding="5dp"
                    android:src="@drawable/voice_icon" />

                <ImageView
                    android:id="@+id/photos_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contentDescription="@string/empty_string"
                    android:padding="5dp"
                    android:src="@drawable/photos_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_type1"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/music_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contentDescription="@string/empty_string"
                    android:padding="5dp"
                    android:src="@drawable/music_icon" />

                <ImageView
                    android:id="@+id/videos_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contentDescription="@string/empty_string"
                    android:padding="5dp"
                    android:src="@drawable/videos_icon" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/real_newkiss_header4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/llNextThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/realnewKiss_txt_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/next"
                android:textColor="@color/button_bg"
                android:textSize="@dimen/fifteen_sp" />

            <ImageView
                android:id="@+id/realtimethird_next_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:contentDescription="@string/empty_string"
                android:src="@drawable/next_icon" />
        </LinearLayout>

        <ImageView
            android:id="@+id/realtime_process_iconthird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/empty_string" />
    </RelativeLayout>

</RelativeLayout>