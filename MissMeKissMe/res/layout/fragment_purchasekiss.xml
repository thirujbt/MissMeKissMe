<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg" >

    <RelativeLayout
        android:id="@+id/purchase_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/purchase_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:contentDescription="@string/empty_string"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/purchase_txtfourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/purchase"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/purchase_header1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/purchase_header"
        android:background="@color/button_bg"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/purchase_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:contentDescription="@string/empty_string"
            android:src="@drawable/purchase_logo" />

        <TextView
            android:id="@+id/purchase_txttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/fifteen"
            android:text="@string/Purchase_kisses"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_one_sp" />
    </LinearLayout>

    <!--
         <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/purchase_header1"
        android:layout_gravity="center_horizontal"
        android:scrollbars="none" >
    -->

    <RelativeLayout
        android:id="@+id/purchase_header3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center" >

        <!--
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:contentDescription="@string/empty_string"
                android:src="@drawable/purchase_limited" />

            <Button
                android:id="@+id/purchase_limited"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_purchase"
                android:text="Purchase Now"
                android:textColor="@color/black" />
        -->

        <ImageView
            android:id="@+id/purchaseimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:contentDescription="@string/empty_string"
            android:src="@drawable/purchase_unlimited" />

        <Button
            android:id="@+id/purchase_unlimited"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/purchaseimg"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_purchase"
            android:text="Purchase Now"
            android:textColor="@color/black" />
    </RelativeLayout>
    <!-- </ScrollView> -->

</RelativeLayout>