<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/vault_msg_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/vault_msg_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:contentDescription="@string/empty_string"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/newKiss_txtthird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/vault_kisses"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/vault_header1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/vault_msg_header"
        android:background="@color/button_bg"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/vault_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:contentDescription="@string/empty_string"
            android:src="@drawable/user_default_image" />

        <TextView
            android:id="@+id/vault_kiss_txtthird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/fifteen"
            android:paddingStart="@dimen/fifteen"
            android:text="@string/empty_string"
            android:textColor="@color/white"
            android:textSize="@dimen/eighteen_sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vault_header1"
        android:background="@color/white"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/vaultkiss_header2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginStart="@dimen/ten"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen_sp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen_sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/vaultkiss_header3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/vaultkiss_header2"
                android:background="@color/white" >

                <LinearLayout
                    android:id="@+id/ll_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_marginStart="@dimen/fifteen"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/vault_msg_tilte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_string"
                        android:textColor="@color/button_bg"
                        android:textSize="@dimen/fifteen_sp" />

                    <TextView
                        android:id="@+id/vault_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen_sp" />

                    <TextView
                        android:id="@+id/vault_miles_tilte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/miles_travelled"
                        android:textColor="@color/button_bg"
                        android:textSize="@dimen/fifteen_sp" />

                    <TextView
                        android:id="@+id/vault_mils"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen_sp" />

                    <TextView
                        android:id="@+id/vault_time_tilte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/times_ravelled"
                        android:textColor="@color/button_bg"
                        android:textSize="@dimen/fifteen_sp" />

                    <TextView
                        android:id="@+id/vault_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen_sp" />

                    <TextView
                        android:id="@+id/view_path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/view_path"
                        android:textColor="@color/button_bg"
                        android:textSize="@dimen/fifteen_sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/msg_attachment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_msg"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_marginTop="20dp"
                    android:text="@string/message_attachments"
                    android:textColor="@color/button_bg"
                    android:textSize="@dimen/fifteen_sp" />

                <LinearLayout
                    android:id="@+id/ll_msg_attachment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/msg_attachment_title"
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_marginRight="@dimen/fifteen"
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/dotted_border"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/attachment_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen"
                        android:layout_marginStart="@dimen/fifteen"
                        android:contentDescription="@string/empty_string"
                        android:src="@drawable/attachment_icon" />

                    <TextView
                        android:id="@+id/attachment_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen"
                        android:layout_marginStart="@dimen/fifteen"
                        android:textSize="@dimen/thirteen_sp" />

                    <ImageView
                        android:id="@+id/attachment_download_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/hundred"
                        android:layout_marginStart="@dimen/hundred"
                        android:contentDescription="@string/empty_string" />
                </LinearLayout>

                <TextView
                    android:id="@+id/dummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_msg_attachment" />

                <LinearLayout
                    android:id="@+id/ll_msg_delete_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dummy"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_marginStart="@dimen/fifteen"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/attachment__deleteicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen"
                        android:layout_marginStart="@dimen/fifteen"
                        android:clickable="true"
                        android:contentDescription="@string/empty_string"
                        android:src="@drawable/delete_icon" />

                    <TextView
                        android:id="@+id/attachment__delete_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen"
                        android:layout_marginStart="@dimen/fifteen"
                        android:text="@string/delete"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fifteen_sp" />

                    <ImageView
                        android:id="@+id/attachment_reply_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/hundred"
                        android:layout_marginStart="@dimen/hundred"
                        android:clickable="true"
                        android:contentDescription="@string/empty_string"
                        android:src="@drawable/reply_icon" />

                    <TextView
                        android:id="@+id/attachment__reply_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifteen"
                        android:layout_marginStart="@dimen/fifteen"
                        android:text="@string/reply"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fifteen_sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/dummyyy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_msg_delete_reply" />

                <!-- <LinearLayout
                    android:id="@+id/ll_blind_accpet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
