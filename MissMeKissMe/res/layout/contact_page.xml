<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/contact_page_header"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/black"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/contact_page_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:contentDescription="@string/empty_string"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/cp_newKiss_txt_blind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/contact_page"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contact_page_newkiss_header1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/contact_page_header"
        android:background="@color/button_bg"
        android:orientation="horizontal"
        android:padding="5dp" >

        <AutoCompleteTextView
            android:id="@+id/contact_page_searchbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search_textbox"
            android:completionThreshold="1"
            android:hint="Search"
            android:imeOptions="actionSearch"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#b2b2b2"
            android:textColorHint="#b2b2b2" />

        <ImageView
            android:id="@+id/blind_kiss_searchimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/empty_string"
            android:src="@drawable/search_icon" />
    </RelativeLayout>

    <ListView
        android:id="@+id/cont_page_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_page_newkiss_header1"
        android:scrollbars="none" >
    </ListView>

</RelativeLayout>