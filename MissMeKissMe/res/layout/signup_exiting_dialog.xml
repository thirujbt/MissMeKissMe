<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95000000"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/circle_layout" >

        <TextView
            android:id="@+id/alert_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Alert Info"
            android:textColor="#656565"
            android:textSize="20sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.25dp"
            android:layout_below="@+id/alert_dialog_title"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="#01c2d4" />

        <TextView
            android:id="@+id/alert_dialog_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alert_dialog_title"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/empty_string"
            android:textColor="#656565"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/OTP_edit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/alert_dialog_txt"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:text="@string/empty_string"
            android:textColor="#656565"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/resend_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/OTP_edit"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/resend"
            android:textColor="#656565"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/alert_dialog_ok_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/dialog_button"
            android:text="OK"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</RelativeLayout>